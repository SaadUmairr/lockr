generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}



model User {
  googleID        String  @id
  username        String
  avatar          String
  email           String  @unique
  isPassphraseSet Boolean @default(false)

  encryptionKey UserEncryptionKey?
  PasswordEntry PasswordEntry[]
}

model UserEncryptionKey {
  googleID   String @id
  aesKey     String
  aesIV      String
  passphrase String

  user User @relation(fields: [googleID], references: [googleID], onDelete: Cascade)
}

model PasswordEntry {
  id        String   @id @default(cuid())
  space     String   @default("main")
  userId    String
  website   String?
  username  String
  password  String
  iv        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [googleID], onDelete: Cascade)
}
